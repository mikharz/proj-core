{
    "name": "proj/core",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Core\\": "src/",
            "CoreTests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "sort-packages": true
    },
    "require": {
        "sentry/sentry": "^4.15"
    },
    "require-dev": {
        "deptrac/deptrac": "^4.2",
        "friendsofphp/php-cs-fixer": "^3.87",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12"
    },
    "scripts": {
        "analyse": [
            "deptrac analyse",
            "phpstan analyse",
            "php-cs-fixer check --diff"
        ],
        "fix": [
            "php-cs-fixer fix"
        ],
        "tests": [
            "phpunit tests"
        ]
    }
}
