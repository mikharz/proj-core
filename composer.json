{
    "name": "proj/core",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Core\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "sort-packages": true
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.87",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "analyse": [
            "php-cs-fixer check --diff",
            "phpstan analyse --level 10 src/"
        ],
        "fix": [
            "php-cs-fixer fix"
        ]
    }
}
